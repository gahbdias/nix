      fileSystems."/" =
    { device = "/dev/disk/by-uuid/10cd3d71-08db-4ea6-bb8d-5b4bbea84803";
      fsType = "ext4";
    };

      fileSystems."/boot" =
    { device = "/dev/disk/by-uuid/E93D-15D3";
      fsType = "vfat";
    };
      swapDevices = [ ];

