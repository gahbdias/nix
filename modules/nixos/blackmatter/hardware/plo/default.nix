  options = {
    blackmatter = {
      hardware.plo.enable = mkEnableOption "hardware.plo";
    };
  };
  config = mkMerge [
    (mkIf cfg.hardware.plo.enable {
      sound.enable = true;
      hardware.pulseaudio.enable = false;
      hardware.bluetooth.enable = false;
      programs.light.enable = true;
      boot.initrd.availableKernelModules = [
        "usb_storage"
        "xhci_pci"
        "usbhid"
        "sd_mod"
        "nvme"
        "ahci"
